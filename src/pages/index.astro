---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getRecentPosts, getPickupPosts } from '@/lib/data-utils'

const blog = await getRecentPosts(SITE.featuredPostCount)
const pickupPosts = await getPickupPosts()

// ここに表示したいYouTubeの動画IDを追加するんだよ！
const videoIds = ['YOUR_VIDEO_ID_1', 'YOUR_VIDEO_ID_2', 'YOUR_VIDEO_ID_3']

---

<Layout class="max-w-4xl">
  <section class="mb-8">
    <div class="rounded-lg border">
      <div class="flex flex-col space-y-1.5 p-6">
        <h3 class="text-3xl leading-none font-medium">lineside - blog</h3>
        <p class="text-muted-foreground text-sm">
          linesideの公式ブログです。日常の何気ない出来事から、技術的な事まで幅広く発信しています。
        </p>
      </div>
      <div class="p-6 pt-0">
        <p class="text-muted-foreground mb-2 text-sm">
          先生のサイトの紹介文をここに書こう！
        </p>
      </div>
    </div>
  </section>

  {
    pickupPosts.length > 0 ? (
      <section class="flex flex-col gap-y-4 mb-8">
        <h2 class="text-2xl font-medium flex items-center whitespace-nowrap">
          Pick Up Posts
          <div class="h-px w-full bg-gray-300 ml-4"></div>
        </h2>
        <ul class="flex flex-col gap-y-4">
          {pickupPosts.map((post) => (
            <li>
              <BlogCard entry={post} />
            </li>
          ))}
        </ul>
      </section>
    ) : (
      <section class="flex flex-col gap-y-4 mb-8">
        <h2 class="text-2xl font-medium flex items-center whitespace-nowrap">
          Pick Up Posts
          <div class="h-px w-full bg-gray-300 ml-4"></div>
        </h2>
        <p class="text-muted-foreground">現在ピックアップ記事はありません。</p>
      </section>
    )
  }

  <section class="flex flex-col gap-y-4 mb-8">
    <h2 class="text-2xl font-medium flex items-center whitespace-nowrap">
      Recent Posts
      <div class="h-px w-full bg-gray-300 ml-4"></div>
    </h2>
    <ul class="flex flex-col gap-y-4">
      {
        blog.map((post) => (
          <li>
            <BlogCard entry={post} />
          </li>
        ))
      }
    </ul>
    <div class="flex justify-center">
      <Link
        href="/blog"
        class={buttonVariants({ variant: 'ghost' }) + ' group'}
      >
        See all posts <span
          class="ml-1.5 transition-transform group-hover:translate-x-1"
          >&rarr;</span
        >
      </Link>
    </div>
  </section>

  <section class="flex flex-col gap-y-4 mb-8">
    <h2 class="text-2xl font-medium flex items-center whitespace-nowrap">
      Videos
      <div class="h-px w-full bg-gray-300 ml-4"></div>
    </h2>
    <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-4">
      {videoIds.map((id) => (
        <div class="aspect-video">
          <iframe
            class="w-full h-full rounded-lg"
            src={`https://www.youtube.com/embed/${id}`}
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
        </div>
      ))}
    </div>
  </section>
</Layout>